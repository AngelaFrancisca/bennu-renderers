<?xml version="1.0" encoding="ISO-8859-1"?>
<project basedir="." default="compile" name="Fenix Web Framework">

	<property environment="env"/>
	<property name="encoding" value="ISO-8859-1"/>

	<property file="build.properties"/>

	<property name="src" location="src"/>

	<property name="lib" location="lib"/>

	<property name="build.home" value="build"/>
	<property name="deploy.home" location="deploy"/>

	<property name="jar.file" value="${deploy.home}/fenix-web-framework.jar"/>

	<property name="compile.debug"       value="on"/>
	<property name="compile.deprecation" value="off"/>
	<property name="compile.optimize"    value="on"/>

	<target name="clean-all" description="Removes any generated files">
		<delete dir="${build.home}"/>
		<delete dir="${deploy.home}"/>
	</target>

	<target name="prepare" description="Create necessary dirs">
		<mkdir dir="${build.home}"/>
		<mkdir dir="${deploy.home}"/>
	</target>

	<target name="compile" description="Compiles code" depends="prepare">
		<javac destdir="${build.home}"
				extdirs="${lib}"
				debug="${compile.debug}"
				optimize="${compile.optimize}"
				deprecation="${compile.deprecation}"
				encoding="${encoding}"
				nowarn="false">
			<src path="${src}"/>
		</javac>
	</target>

	<target name="jar" depends="compile" description="Generates the jar file">
		<jar destfile="${jar.file}" basedir="${build.home}"/>
	</target>

</project>
